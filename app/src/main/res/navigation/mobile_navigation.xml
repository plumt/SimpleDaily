<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/homeFragment">

    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment"
        app:popUpTo="@id/mobile_navigation"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_global_memoFragment"
        app:destination="@id/memoFragment"
        app:popUpTo="@id/mobile_navigation"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_global_calendarFragment"
        app:destination="@id/calendarFragment"
        app:popUpTo="@id/mobile_navigation"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_global_settingFragment"
        app:destination="@id/settingFragment"
        app:popUpTo="@id/mobile_navigation"
        app:popUpToInclusive="true" />

    <fragment
        tools:layout="@layout/fragment_home"
        android:id="@+id/homeFragment"
        android:name="com.yun.simpledaily.ui.home.HomeFragment"
        android:label="홈" >
    </fragment>

    <fragment
        tools:layout="@layout/fragment_schedule"
        android:id="@+id/calendarFragment"
        android:name="com.yun.simpledaily.ui.schedule.ScheduleFragment"
        android:label="일정" />

    <fragment
        tools:layout="@layout/fragment_memo"
        android:id="@+id/memoFragment"
        android:name="com.yun.simpledaily.ui.memo.MemoFragment"
        android:label="메모" />

    <fragment
        tools:layout="@layout/fragment_setting"
        android:id="@+id/settingFragment"
        android:name="com.yun.simpledaily.ui.setting.SettingFragment"
        android:label="설정" >
        <action
            android:id="@+id/action_settingFragment_to_locationFragment"
            app:destination="@id/locationFragment" />
        <action
            android:id="@+id/action_settingFragment_to_boardSettingFragment"
            app:destination="@id/boardSettingFragment" />
    </fragment>

    <fragment
        tools:layout="@layout/fragment_location"
        android:id="@+id/locationFragment"
        android:name="com.yun.simpledaily.ui.location.LocationFragment"
        android:label="지역" />

    <fragment
        tools:layout="@layout/fragment_board_setting"
        android:id="@+id/boardSettingFragment"
        android:name="com.yun.simpledaily.ui.board.BoardSettingFragment"
        android:label="BoardSettingFragment" />
    <fragment
        tools:layout="@layout/fragment_hourly_weather"
        android:id="@+id/hourlyWeatherFragment"
        android:name="com.yun.simpledaily.ui.hourly.HourlyWeatherFragment"
        android:label="시간별" />




</navigation>