<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="itemCalendar"
            type="com.yun.simpledaily.data.model.CalendarModels" />

        <variable
            name="calendarItemListener"
            type="com.yun.simpledaily.base.BaseRecyclerAdapter.OnItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="50dp">

        <TextView
            android:id="@+id/tv_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="@{itemCalendar.event}"
            android:textColor="@color/color_777777"
            android:textSize="15sp"
            android:visibility="@{itemCalendar.title != null ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toTopOf="@id/v_line"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:gravity="center_vertical|start"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:text="@{itemCalendar.title}"
            android:textColor="@color/color_FBA53B"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="@{itemCalendar.title != null ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@{itemCalendar.title != null ? @color/color_FBA53B : @color/color_f4f4f4}"
            android:visibility="@{itemCalendar.last ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>