<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="memoDetail"
            type="com.yun.simpledaily.ui.memo.viewpager.detail.MemoDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@={memoDetail.etTitle}"
            android:textColor="@color/color_FBA53B"
            android:textSize="17sp"
            android:background="@null"
            android:textStyle="bold"
            android:enabled="@{memoDetail.updateMode}"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:visibility="@{memoDetail.updateMode ? View.VISIBLE : View.INVISIBLE}"
            android:background="@color/color_FBA53B"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintTop_toBottomOf="@id/et_title"
            android:layout_marginTop="5dp"
            android:id="@+id/v_line"
            />

        <EditText
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:enabled="@{memoDetail.updateMode}"
            android:id="@+id/et_memo"
            android:gravity="top"
            android:layout_marginTop="15dp"
            android:text="@={memoDetail.etMemo}"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@id/v_line" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>