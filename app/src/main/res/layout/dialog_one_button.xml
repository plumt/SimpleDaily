<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="contents"
            type="String" />

        <variable
            name="btn_text"
            type="String" />

        <variable
            name="ads"
            type="Boolean" />

        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:background="@drawable/alert_white_border">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@{title}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/color_e8e8e8"
            android:visibility="@{ads ? View.GONE : View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <com.google.android.ads.nativetemplates.TemplateView
            android:id="@+id/my_template"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:visibility="@{ads ? View.VISIBLE : View.GONE}"
            app:gnt_template_type="@layout/gnt_medium_template_view"
            app:layout_constraintTop_toBottomOf="@id/v_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/v_top"
            android:layout_marginTop="20dp"
            android:visibility="@{ads ? View.GONE : View.VISIBLE}"
            app:layout_constraintTop_toBottomOf="@id/my_template"
            />

        <TextView
            android:id="@+id/tv_contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@{contents}"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@id/v_top"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/v_bottom"
            android:layout_marginTop="20dp"
            android:visibility="@{ads ? View.GONE : View.VISIBLE}"
            app:layout_constraintTop_toBottomOf="@id/tv_contents"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_result"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/color_FBA53B"
            android:text="@{btn_text}"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:textColor="@color/white"
            app:cornerRadius="60dp"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@id/v_bottom" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>