<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="home"
            type="com.yun.simpledaily.ui.home.HomeViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <TextView
                android:id="@+id/tv_now_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:shadowColor="#33000000"
                android:shadowDx="3.0"
                android:shadowDy="3.0"
                android:shadowRadius="1.0"
                android:text="@string/now_weather"
                android:textColor="@color/color_FBA53B"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="@{home.isShowWeather() &amp;&amp; !home.uv.equals(``) || home.searchLocation.equals(``) ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/ic_now_weather"
                layout="@layout/view_now_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{home.searchLocation.equals(``) || !home.isShowWeather() || home.uv.equals(``) ? View.GONE : View.VISIBLE}"
                app:compare="@{home.nowWeather.compare}"
                app:detail="@{home.nowWeather.weatherDetail}"
                app:dust="@{home.dust}"
                app:imagepath="@{home.nowWeather.imagePath}"
                app:layout_constraintTop_toBottomOf="@id/tv_now_weather"
                app:location="@{home.nowWeather.location}"
                app:temperature="@{home.nowWeather.temperature}"
                app:udust="@{home.uDust}"
                app:uv="@{home.uv}"
                app:weather="@{home.nowWeather.weather}" />

            <TextView
                android:id="@+id/tv_no_now_weather"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:text="@string/no_weather"
                android:textColor="@color/color_777777"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="@{home.searchLocation.equals(``) &amp;&amp; home.isShowWeather() ? View.VISIBLE : View.GONE}"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/ic_now_weather" />

            <include
                android:id="@+id/ic_no_now_weather"
                layout="@layout/view_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="@{home.searchLocation.equals(``) &amp;&amp; home.isShowWeather() ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toBottomOf="@id/tv_no_now_weather"
                app:listener="@{home.onClick}"
                app:title="@{@string/no_location_setting}"
                app:type="@{@string/weather}" />

<!--            /////////////////////////////////////////////////////////////////////-->

            <TextView
                android:id="@+id/tv_hourly_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:shadowColor="#33000000"
                android:shadowDx="3.0"
                android:shadowDy="3.0"
                android:shadowRadius="1.0"
                android:text="@string/hourly_weather"
                android:textColor="@color/color_FBA53B"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="@{home.isShowHourly() &amp;&amp; !home.hourlyWeatherList.empty || home.searchLocation.equals(``) ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/ic_no_now_weather" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_hourly_weather"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:visibility="@{!home.searchLocation.equals(``) &amp;&amp; home.isShowHourly() &amp;&amp; !home.hourlyWeatherList.empty ? View.VISIBLE : View.GONE}"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/tv_hourly_weather">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_hourly_weather"
                    replaceAll="@{home.hourlyWeatherList}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_hourly_weather" />
            </com.google.android.material.card.MaterialCardView>

            <include
                android:id="@+id/ic_other_weather"
                layout="@layout/view_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="@{!home.searchLocation.equals(``) &amp;&amp; home.isShowHourly() &amp;&amp; !home.hourlyWeatherList.empty? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toBottomOf="@id/cv_hourly_weather"
                app:listener="@{home.onClick}"
                app:title="@{@string/hourly_more_txt}"
                app:type="@{@string/hourly}" />

            <include
                android:id="@+id/ic_week_weather"
                layout="@layout/view_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{!home.searchLocation.equals(``) &amp;&amp; home.isShowHourly() &amp;&amp; !home.hourlyWeatherList.empty? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toBottomOf="@id/ic_other_weather"
                app:listener="@{home.onClick}"
                app:title="@{@string/week_more_txt}"
                app:type="@{@string/week}" />

            <TextView
                android:id="@+id/tv_no_hourly_weather"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:text="@string/no_weather"
                android:textColor="@color/color_777777"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="@{home.searchLocation.equals(``) &amp;&amp; home.isShowHourly() ? View.VISIBLE : View.GONE}"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/ic_week_weather" />

            <include
                android:id="@+id/ic_no_hourly_weather"
                layout="@layout/view_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="@{home.searchLocation.equals(``) &amp;&amp; home.isShowHourly() ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toBottomOf="@id/tv_no_hourly_weather"
                app:listener="@{home.onClick}"
                app:title="@{@string/no_location_setting}"
                app:type="@{@string/weather}" />

<!--            //////////////////////////////////////////////////////////////////////-->

            <TextView
                android:id="@+id/tv_realtime_top10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:shadowColor="#33000000"
                android:shadowDx="3.0"
                android:shadowDy="3.0"
                android:shadowRadius="1.0"
                android:text="@string/realtime_top10"
                android:textColor="@color/color_FBA53B"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="@{home.isShowRealTime() &amp;&amp; !home.realTimeTop10.empty ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/ic_no_hourly_weather" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_realtime_top10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="@{home.isShowRealTime() &amp;&amp; !home.realTimeTop10.empty ? View.VISIBLE : View.GONE}"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/tv_realtime_top10">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_realtime_top10"
                    replaceAll="@{home.realTimeTop10}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="10dp"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:listitem="@layout/item_hourly_weather" />
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/tv_realtime_popular_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:shadowColor="#33000000"
                android:shadowDx="3.0"
                android:shadowDy="3.0"
                android:shadowRadius="1.0"
                android:text="@string/realtime_popular_news"
                android:textColor="@color/color_FBA53B"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="@{home.isShowNews() &amp;&amp; !home.popularNews.empty ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/cv_realtime_top10" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_popular_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="@{home.isShowNews() &amp;&amp; !home.popularNews.empty ? View.VISIBLE : View.GONE}"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/tv_realtime_popular_news">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_popular_news"
                    replaceAll="@{home.popularNews}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_popular_news" />
            </com.google.android.material.card.MaterialCardView>

            <include
                android:id="@+id/ic_press_news"
                layout="@layout/view_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="@{home.isShowNews() &amp;&amp; !home.popularNews.empty ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toBottomOf="@id/cv_popular_news"
                app:listener="@{home.onClick}"
                app:title="@{@string/press_news}"
                app:type="@{@string/news}" />

            <TextView
                android:id="@+id/tv_currently_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:shadowColor="#33000000"
                android:shadowDx="3.0"
                android:shadowDy="3.0"
                android:shadowRadius="1.0"
                android:text="@string/currently_memo"
                android:textColor="@color/color_FBA53B"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="@{home.isShowMemo() ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/ic_press_news" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_currently_memo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="@{home.memoSize == 0 || !home.isShowMemo() ? View.INVISIBLE : View.VISIBLE}"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/tv_currently_memo">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_memo"
                    replaceAll="@{home.memoList}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_memo" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_no_memo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/no_insert_memo"
                android:textColor="@color/color_777777"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="@{home.memoSize == 0 &amp;&amp; home.isShowMemo() ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/cv_currently_memo"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toTopOf="@id/cv_currently_memo" />

            <include
                android:id="@+id/ic_move_memo_screen"
                layout="@layout/view_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="@{home.isShowMemo() ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toBottomOf="@id/cv_currently_memo"
                app:listener="@{home.onClick}"
                app:title="@{@string/all_memo}"
                app:type="@{@string/memo}" />


            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/ic_move_memo_screen" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>